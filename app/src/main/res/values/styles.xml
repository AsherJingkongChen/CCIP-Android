<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="materialButtonStyle">@style/Widget.OPass.ColoredButton</item>
        <item name="toolbarStyle">@style/Widget.OPass.Toolbar</item>
        <item name="android:windowBackground">@color/colorWindowBackground</item>
        <item name="android:textColorLink">@color/link_color</item>
    </style>

    <style name="AppTheme.PopupTheme" parent="ThemeOverlay.MaterialComponents.Light" />

    <style name="Widget.CardContent" parent="android:Widget">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">24dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="Session">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Session.Title">
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="Session.Type" parent="Session">
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="Session.Time" parent="Session">
        <item name="android:textColor">?attr/colorOnBackground</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">16dp</item>
    </style>

    <style name="Session.Room" parent="Session">
        <item name="android:textColor">#FFF</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/room_background</item>
    </style>

    <style name="Widget.OPass" parent="android:Widget.Material" />

    <style name="Widget.OPass.AppBar" parent="Widget.Design.AppBarLayout">
        <item name="android:theme">@style/ThemeOverlay.MaterialComponents.Dark.ActionBar</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="Widget.OPass.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="popupTheme">@style/AppTheme.PopupTheme</item>
    </style>

    <style name="Widget.OPass.TabLayout" parent="Widget.MaterialComponents.TabLayout.Colored">
        <item name="tabIndicatorColor">?attr/colorSecondary</item>
    </style>

    <style name="Widget.OPass.ColoredButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="Widget.OPass.AuthNavBar">
        <item name="android:background">#EEE</item>
    </style>

    <style name="TextAppearance.OPass.AuthTitle" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">?attr/colorOnBackground</item>
    </style>

    <style name="TextAppearance.OPass.AuthListItem" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>
</resources>
